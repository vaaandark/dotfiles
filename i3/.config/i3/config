# Use pactl to adjust volume in PulseAudio.
set $refresh_i3blocks pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec amixer set Master playback 5000+ && $refresh_i3blocks
bindsym XF86AudioLowerVolume exec amixer set Master playback 5000- && $refresh_i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3blocks

# backlight
bindsym XF86MonBrightnessUp exec sh -c ~/.local/bin/lightup
bindsym XF86MonBrightnessDown exec sh -c ~/.local/bin/lightdown

