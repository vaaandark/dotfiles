bindsym Ctrl+Print exec $scripts_dir/window-shot

# display
bindsym $mod+p exec $scripts_dir/monitor-display && sleep 1 && $scripts_dir/set_wallpapers

# bluetooth divice
bindsym $mod+u exec $scripts_dir/blue-mouse
bindsym $mod+y exec $scripts_dir/blue-keyboard

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3blocks pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec amixer set Master playback 5000+ && $refresh_i3blocks
bindsym XF86AudioLowerVolume exec amixer set Master playback 5000- && $refresh_i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3blocks

# backlight
bindsym XF86MonBrightnessUp exec $scripts_dir/lightup
bindsym XF86MonBrightnessDown exec $scripts_dir/lightdown

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty
bindsym $mod+Ctrl+Return exec --no-startup-id urxvt -geometry 80x20 -name "floating_urxvt"
for_window [class="URxvt" instance="floating_urxvt$"] floating toggle

# kill focused window
bindsym $mod+Shift+q kill

