bindsym $mod+Ctrl+k exec okular
bindsym $mod+Ctrl+f exec bytedance-feishu --force-device-scale-factor=1.5 %U
bindsym $mod+Ctrl+l exec rm /tmp/auto_backlight.lock /tmp/auto_backlight.log
